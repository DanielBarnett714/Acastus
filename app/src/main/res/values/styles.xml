<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseDark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_theme_font</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/dark_theme_font</item>
        <item name="android:editTextColor">@color/dark_theme_font</item>
        <item name="android:textColorHint">@color/dark_theme_accent</item>
        <item name="android:textColorSecondary">@color/dark_theme_accent</item>
        <item name="android:itemBackground">@color/dark_gray</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:preferenceStyle">@style/darkPreference</item>
        <item name="android:actionMenuTextColor">@color/dark_theme_font</item>
        <item name="actionMenuTextColor">@color/dark_theme_font</item>
        <item name="android:actionBarStyle">@style/AppTheme.AppBarOverlay</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>




    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/dark_theme_font</item>
    </style>

    <style name="darkPreference" parent="BaseDark">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/dark_theme_font</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:textColor">@color/dark_theme_font</item>
        <item name="android:editTextColor">@color/dark_theme_font</item>
        <item name="android:textColorHint">@color/dark_theme_accent</item>
        <item name="android:textColorSecondary">@color/dark_theme_accent</item>
        <item name="android:itemBackground">@color/dark_gray</item>
        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:popupBackground">@color/dark_gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
